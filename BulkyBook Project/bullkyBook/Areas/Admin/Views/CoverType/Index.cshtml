 @model IEnumerable<CoverType> 
@{
    ViewData["Title"] = "Index";
}

<div class ="container p-3">
    <div class ="row pt-4">
        <div class ="col-6">
            <h2 class = "text-primary">
                CoverType List
            </h2>
        </div>
        <div class ="col-6" text-end>
           <a asp-controller="CoverType" asp-action="Create" class = "btn btn-primary">
              <i class="bi bi-plus-circle"></i> Create new CoverType
           </a>
        </div>

    </div>

   


    <br /><br />
<table class ="table table-bodered table-striped" style = "width:1000">

    <thead>
        <tr>
            <th>CoverType name</th>
            
            <th> </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width = "50%">@obj.cover_name</td>
                <td>
                    <div class = "w-75 btn-group" role = "group">
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.cover_id" class="btn btn-primary mx-2"> <i class="bi bi-pen"></i>Edit</a>
                            <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.cover_id" class="btn btn-primary mx-2"> <i class="bi bi-pen"></i>Delete</a>

                    </div>

                </td>
            </tr>
            
        }

    </tbody>
    </div>

</table>